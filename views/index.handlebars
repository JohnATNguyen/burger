<h1>Eat-The-Burger</h1>

<h2>Available Burgers</h2>

<ol>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.burger_name}}

				<form action="/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="true">
					<button type="submit">DEVOUR!</button>
				</form>

			</li>
		{{/unless}}
	{{/each}}
</ol>

<h2>Devoured Burgers</h2>

<ol>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}

			</li>
		{{/if}}
	{{/each}}
</ol>

<h2>Add a Burger</h2>
<form action="/" method="POST">
	
	<div>
		<label for="burger">Burger Name:</label>
		<input type="text" name="burger_name">
	</div>

	<button type="submit">Add Burger</button>
</form> 